@using BackRowCommerceApp.Infrastructure
@model Transaction

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Transaction</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CR_DR"></label>
            <select asp-validation-for="CR_DR" class="form-select"  style="color:black">
                <option value="@Constants.TransactionType.CR" asp-validation-for="CR_DR" style="color:black">Deposit</option>
                <option value="@Constants.TransactionType.DR" asp-validation-for="CR_DR" style="color:black">Withdrawal</option>
            </select>
        </div>
        <div>
            <label asp-for="Location"></label>
            <select asp-for="Location" class="form-select"  style="color:black">
                @{
                    Constants states = new Constants();
                    foreach(KeyValuePair<Constants.States,string> state in states.statesMap())
                    {
                        <option value="@state.Key" asp-validation-for="Location" style="color:black">
                            @state.Value
                        </option>
                    }
                }
              </select>
         </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Transaction" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}